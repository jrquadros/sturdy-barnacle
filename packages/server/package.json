{
  "name": "server",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/faker": "^4.1.12",
    "@types/glob": "^7.1.3",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.5",
    "@types/lodash": "^4.14.157",
    "@types/node": "^14.0.23",
    "@types/nodemon": "^1.19.0",
    "faker": "^4.1.0",
    "gql2ts": "^1.10.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "start-server-and-test": "^1.11.2",
    "ts-jest": "^26.1.3",
    "ts-node": "8.10.2",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.9.7"
  },
  "scripts": {
    "start": "NODE_ENV=development nodemon --exec ts-node --files src/index.ts",
    "test-server": "NODE_ENV=test ts-node --files src/index.ts",
    "lint:staged": "lint-staged",
    "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts",
    "test": "NODE_ENV=test jest --coverage --runInBand --forceExit",
    "test:watch": "jest --watch",
    "ci": "start-server-and-test test-server http://localhost:4000 test"
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^6.0.14",
    "@graphql-tools/load": "^6.0.14",
    "@graphql-tools/schema": "^6.0.14",
    "@types/yup": "^0.29.3",
    "bcryptjs": "^2.4.3",
    "cross-fetch": "^3.0.5",
    "dotenv": "^8.2.0",
    "glob": "^7.1.6",
    "graphql": "^15.3.0",
    "graphql-import": "^1.0.2",
    "graphql-request": "^2.0.0",
    "graphql-tools": "^6.0.14",
    "graphql-yoga": "^1.18.3",
    "lodash": "^4.17.19",
    "merge-graphql-schemas": "^1.7.8",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.25",
    "yup": "^0.29.1"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write --single-quote true --trailing-comma all --print-width 120 --semi false",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
